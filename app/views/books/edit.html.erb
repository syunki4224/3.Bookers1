<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this being saved:<br>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <br><%= f.submit 'Update Book' %></br>

  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>
<% end %>